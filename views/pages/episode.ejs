<% include ../partials/_header.ejs%>


<body>

<h1 class="small-header">
  <div data-fitter-happier-text class="decorative-header-script decorative-header-lets">Let&rsquo;s</div>
  <div data-fitter-happier-text class="decorative-header-sans decorative-header-make">Make</div>
  <div data-fitter-happier-text class="decorative-header-script decorative-header-mistakes">Mistakes</div>
</h1>

<div class="content">
  <div class="row">
    <div class="recent-episode episode">
      <div class="episode-details">
        <div class="episode-number">
          <a href="episode/<%= show.id %>"><%= show.title.substring(0,3) %></a>
        </div>
        <div class="episode-date"><%= show.last_modified.substring(5,7) %>/<%= show.last_modified.substring(8,10) %>/<%= show.last_modified.substring(0,4) %></div>
      </div>
      <div class="episode-text">
        <h3 class="small-heading episode-title">
          <a href="<%= show.permalink_url %>"><%= show.title.substring(4) %></a>
        </h3>
        <hr class="fancy-rule">
        <p><%= show.description %></p>
      </div>
      <iframe class="episode-player" width="100%" height="auto" min-height="300" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= show.id %>&amp;auto_play=false&amp;hide_related=true&amp;show_comments=false&amp;show_user=false&amp;show_artwork=false&amp;show_reposts=false&amp;visual=false&amp;theme_color=eeeeee&amp;color=F95F9A&amp;font=proxima-nova"></iframe>

    </div>
      <div class="small-heading see-all"><a href="/">Let&rsquo;s go home &raquo;</a></div>
  </div> <!-- end row -->
</div> <!-- end content -->
<% include ../partials/_footer.ejs%>

